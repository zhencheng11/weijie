<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="4dp"
            android:layout_alignTop="@+id/lala1Id"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:id="@+id/address_location_item_imageId"
            android:src="@mipmap/place_dark_grey"
            android:layout_width="25dp"
            android:layout_height="25dp" />

            <LinearLayout
                android:layout_toRightOf="@+id/address_location_item_imageId"
                android:id="@+id/lala1Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:layout_marginRight="3dp"
                    android:textColor="#ff5d5d"
                    android:id="@+id/address_location_item_currentId"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[当前]"/>
                <TextView
                    android:id="@+id/address_location_item_nameId"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="东村国际创意基地"/>
            </LinearLayout>

            <TextView
                android:layout_below="@+id/lala1Id"
                android:layout_toRightOf="@+id/address_location_item_imageId"
                android:id="@+id/address_location_item_detailId"
                android:textColor="#999999"
                android:layout_marginTop="3dp"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市朝阳区豆各庄开发区一号"/>

    </RelativeLayout>
</RelativeLayout>