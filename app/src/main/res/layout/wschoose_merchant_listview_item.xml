<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:descendantFocusability="blocksDescendants"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/tempview"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/wschoose_merchant_item_imageViewId"/>
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:id="@+id/wschoose_merchant_item_lay1Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/wschoose_merchant_item_nameTvId"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="康师傅红烧牛肉面"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#3bc995"
                android:layout_below="@+id/wschoose_merchant_item_nameTvId"
                android:id="@+id/wschoose_merchant_item_yueShouTvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月售150"/>
            <!--距离-->
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/wschoose_merchant_item_yueShouTvId"
                android:layout_marginTop="10dp"
                android:textColor="#f59c00"
                android:layout_below="@+id/wschoose_merchant_item_nameTvId"
                android:id="@+id/wschoose_merchant_item_distanceTvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.1km"/>
            <!--描述-->
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#999999"
                android:layout_below="@+id/wschoose_merchant_item_distanceTvId"
                android:id="@+id/wschoose_merchant_item_discribleTvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市朝阳区常营中路"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/wschoose_merchant_item_priceId"
                android:textSize="20sp"
                android:textColor="#ff5d5d"
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6元"/>
        <LinearLayout
            android:gravity="bottom|right"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/wschoose_merchant_item_lay1Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wschoose_merchant_item_Lay2Id">
            <ImageButton
                android:visibility="gone"
                android:layout_gravity="center|left"
                android:id="@+id/wschoose_merchant_item_deleteBtnId"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/delete_sign"/>
            <TextView
                android:visibility="gone"
                android:gravity="bottom|center_horizontal"
                android:textSize="20sp"
                android:id="@+id/wschoose_merchant_item_productcountId"
                android:text="1"
                android:layout_width="30dp"
                android:layout_height="25dp" />
            <ImageButton
                android:layout_gravity="center_vertical|right"
                android:id="@+id/wschoose_merchant_item_addBtnId"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/add_sign"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>
    <LinearLayout
        android:id="@+id/wschoose_merchant_item_bottomLayId"
        android:paddingBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout

        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:padding="2dp"
            android:background="#ff5d5d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="减"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首单减一元"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="1dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="20sp"
            android:id="@+id/wschoose_merchant_item_chooseId"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>

</LinearLayout>