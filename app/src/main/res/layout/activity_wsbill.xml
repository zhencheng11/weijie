<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#e5e5e5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.weijie.ActWSBill">

    <include
        android:id="@+id/act_wsbill_titleView" layout="@layout/head_title_main" />
    <ScrollView
        android:layout_above="@+id/payLayId"
        android:layout_below="@+id/act_wsbill_titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!--没有收获地址的时候-->
    <LinearLayout
        android:id="@+id/act_wsbill_hasnot_shouhuodizhiLayoutId"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加收货地址"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/disclosure_arrow"/>
    </LinearLayout>
    <!--有收货地址的时候-->
    <LinearLayout
        android:id="@+id/act_wsbill_has_shouhuodizhiLayoutId1"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人:"/>
                <TextView
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/act_add_address_item_nameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"/>

                <TextView
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:id="@+id/act_add_address_item_phoneId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13717899174"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#666666"
                    android:textSize="17sp"
                    android:text="收货地址:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/act_add_address_item_addressId"
                    android:layout_marginLeft="5dp"
                    android:textColor="#666666"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市朝阳区东崔国际创意基地"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/disclosure_arrow"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/wsbill_shopNameId"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="#666666"
            android:text="BHG生活超市"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
        <LinearLayout
            android:background="#e5e5e5"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        <vmediacn.com.ui.NoScollListView
            android:id="@+id/wsbill_listViewId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></vmediacn.com.ui.NoScollListView>

        <LinearLayout
            android:background="#e5e5e5"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送费"/>
            <TextView
                android:id="@+id/wsbill_peiSongFeiId"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5元"/>
        </LinearLayout>
        <LinearLayout
            android:background="#e5e5e5"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:background="#ff5d5d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="减"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首单减1元"/>

            <TextView
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1元"/>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
    </ScrollView>

        <RelativeLayout
            android:id="@+id/payLayId"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ff5d5d"
                android:textSize="15sp"
                android:layout_alignBottom="@+id/act_wsbill_moneyId"
                android:id="@+id/act_wsbill_fuhaoId"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/act_wsbill_fuhaoId"
                android:id="@+id/act_wsbill_moneyId"
                android:layout_centerVertical="true"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textColor="#ff5d5d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65"/>
            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/act_wsbill_paybtnId"
                android:textColor="#ffffff"
                android:background="@mipmap/btn_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款"/>
        </RelativeLayout>
</RelativeLayout>
