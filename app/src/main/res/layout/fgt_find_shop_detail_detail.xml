<LinearLayout
    android:orientation="vertical"
    android:background="#d5d5d5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vmediacn.com.fragment.find.FindFgtShopDetailXiangQ">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/find_shop_xiangQing_locationLayId"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/find_shop_xiangQing_locationId"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="北京市朝阳区豆各庄东村文化创业园" />
        <ImageView
            android:layout_marginRight="5dp"
            android:src="@mipmap/disclosure_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/find_shop_xiangQing_peiSongTimeId"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送时间：08：30 - 20:30"/>
    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/find_shop_xiangQing_brefId"
            android:layout_marginLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="我们为您精挑细选了世界各地的商品，从名贵到稀有，从品质到品味，应有竟有"/>
    </LinearLayout>


<LinearLayout
    android:layout_marginTop="20dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="减"
            android:textColor="#ffffff"
            android:background="#ff5d5d"
            />
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付满100减20"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首"
            android:textColor="#ffffff"
            android:background="#3bc995"
            />
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首单减2元"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微"
            android:textColor="#ffffff"
            android:background="#f59c00"
            />
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="该商家支付支持使用微街钱包"/>
    </LinearLayout>



</LinearLayout>
</LinearLayout>
