<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vmediacn.com.fragment.FgtFind">
    <include layout="@layout/head_title_main">

    </include>
    <LinearLayout
        android:background="#ffffff"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <LinearLayout
            android:id="@+id/fgt_find_bar_fenLeiId"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView

                android:drawableRight="@mipmap/btn_disclosure_arrow"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fgt_find_bar_rangeId"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView

                android:drawableRight="@mipmap/btn_disclosure_arrow"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排序"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fgt_find_bar_shaiXuanId"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView

                android:drawableRight="@mipmap/btn_disclosure_arrow"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>

    <vmediacn.com.ui.pulltorefrush.XListView
        android:dividerHeight="10dp"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:divider="#eeeeee"
        android:id="@+id/fgt_find_listViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </vmediacn.com.ui.pulltorefrush.XListView>
</LinearLayout>
