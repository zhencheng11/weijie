<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#e5e5e5"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.mine.ActMyBalance">

    <include layout="@layout/head_title_main" />
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/act_yue_yueId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="账户余额"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/act_yue_yueId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/act_yue_fuhaoId"
                android:gravity="center"
                android:textColor="#ff5d5d"
                android:textSize="30sp"
                android:layout_alignBottom="@+id/act_yue_yId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"/>

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/act_yue_fuhaoId"
                android:id="@+id/act_yue_yId"
                android:textColor="#ff5d5d"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="550"/>

        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/act_yue_chargeId"
            android:background="#ffbb33"
            android:gravity="center|center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_margin="20dp"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="充值"/>

        <TextView
            android:background="#cccccc"
            android:gravity="center|center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_margin="20dp"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="提现"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_yue_setPasswordLayId"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|left"
            android:textSize="22sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理支付密码"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/disclosure_arrow"/>
    </LinearLayout>
</LinearLayout>
