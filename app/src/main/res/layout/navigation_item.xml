<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@mipmap/popde"
        android:layout_width="match_parent"
        android:layout_height="70dp">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/navigation_shopNameId"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BHG生活超市"/>
    <TextView

        android:layout_below="@+id/navigation_shopNameId"
        android:id="@+id/navigation_shopLocationId"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京市朝阳区豆各庄东村国际创意基地"/>
    </LinearLayout>
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/navigation_shopNavigationBtnId"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/btn_gps"/>
</LinearLayout>
    </LinearLayout>
</RelativeLayout>