<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <LinearLayout
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">
     <LinearLayout
         android:orientation="horizontal"
          android:layout_width="match_parent"
            android:layout_height="wrap_content">
             <TextView
                 android:textColor="#333333"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人:"/>
                <TextView
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/act_add_address_item_nameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"/>

                <TextView
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:id="@+id/act_add_address_item_phoneId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13717899174"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#666666"
                android:textSize="17sp"
                android:text="收货地址:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/act_add_address_item_addressId"
                android:layout_marginLeft="5dp"
                android:textColor="#666666"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市朝阳区东崔国际创意基地"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/act_add_address_item_editaddressId"
        android:gravity="center"
        android:layout_width="40dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/btn_edit" />
    </LinearLayout>


</LinearLayout>