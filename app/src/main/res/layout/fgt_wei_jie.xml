<vmediacn.com.ui.KeyBoardLayout
    android:id="@+id/root_view"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vmediacn.com.fragment.FgtWeiJie">

    <LinearLayout
        android:id="@+id/fgt_weijie_titleLayId"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/head_title_main" />
    </LinearLayout>

    <com.baidu.mapapi.map.MapView
        android:layout_below="@+id/fgt_weijie_titleLayId"
        android:id="@+id/fgt_weijie_mapViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.baidu.mapapi.map.MapView>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:id="@+id/fgt_weijie_relatlayoutId"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/fgt_weijie_locationImagId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_location"/>
    <LinearLayout
        android:layout_below="@+id/fgt_weijie_locationImagId"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/fgt_weijie_seachlayId"
        android:orientation="vertical"
        android:background="@mipmap/input_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:background="@null"
            android:layout_margin="10dp"
            android:hint="请输入商品名称"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fgt_weijie_seachId"/>
    </LinearLayout>
        <Button

            android:layout_marginTop="15dp"
            android:layout_below="@+id/fgt_weijie_seachlayId"
            android:id="@+id/fgt_weijie_xiadanId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_buy"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="下单"/>
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</vmediacn.com.ui.KeyBoardLayout>
