<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vmediacn.com.activity.mine.ActAddBandCard">

    <include layout="@layout/head_title_main" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#e5e5e5"></LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"/>
            <EditText
                android:id="@+id/act_add_bandcard_userNameId"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:hint="请输入你的真实姓名"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e5e5e5"></LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡号"/>
            <EditText
                android:inputType="number"
                android:id="@+id/act_add_bandcard_bandcardId"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:hint="请输入银行卡号"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e5e5e5"></LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户行"/>
            <EditText
                android:id="@+id/act_add_bandcard_bandNameId"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:hint="请输入开户行与支行"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/btn_disclosure_arrow"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e5e5e5"></LinearLayout>

        <Button
            android:id="@+id/act_add_bandcard_nextBtnId"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:text="下一步"
            android:layout_marginTop="40dp"
            android:layout_margin="20dp"
            android:background="@mipmap/btn_green"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>
